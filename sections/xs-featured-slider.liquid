<style>
  /* Better horizontal gestures, keep vertical page scroll */
#{{ section.id }}-featured-collection .keen-slider{
  touch-action: pan-y;
}

#{{ section.id }}-featured-collection .featured-collection-wrapper{
  padding-top: {{section.settings.mobile_padding}}px;
  padding-bottom: {{section.settings.mobile_padding}}px;
}
.slider-dots button.is-active {
  width: 36px;
  background: #01C5E3 !important;
  height: 8px;
}

@media(min-width:1200px){
  #{{ section.id }}-featured-collection .featured-collection-wrapper{
    padding-top: {{section.settings.desktop_padding}}px;
    padding-bottom: {{section.settings.desktop_padding}}px;
  }
}

/* Fancybox overlay link cursor */
.fc-fancybox-link { cursor: pointer; }
</style>

{% if section.settings.enable_slider %}
  {% render 'vite-tag' with 'xs-featured-slider.js' %}
{% endif %}

<section
  class="xcl-px-4 xcl-relative {% if section.settings.show_card_padding %} xcl-pr-0{% endif %}"
  id="{{ section.id }}-featured-collection"
  data-id="featured-collection-v2"
  style="background-color: {{section.settings.section_bg}}; color:{{section.settings.section_text_color}};
   {% if section.settings.enable_mt_minus %}
      margin-top: -{{ section.settings.mt_minus }}px;
  {% endif %}
  "
  data-autoplay="{{ section.settings.autoplay | default: true }}"
>
  <div class="xl:xcl-w-[880px] xl:xcl-mx-auto">
    <div class="featured-collection-wrapper xcl-relative xcl-z-10">

      {% if section.settings.heading != blank %}
        <div class="xcl-flex xcl-justify-center xcl-flex-col xcl-px-4 xcl-space-y-6 xcl-pb-4 xl:xcl-space-y-6 xl:xcl-pb-8">
          {% if section.settings.heading != blank %}
            <h2
              class="xcl-text-sm xcl-font-semibold xcl-text-center xcl-py-1 xcl-px-4 xcl-rounded-2xl xcl-leading-normal
                     xcl-inline-flex xcl-mx-auto
                     xl:xcl-text-[24px] xl:xcl-px-8"
              style="color: {{ section.settings.heading_color }}; background:{{section.settings.heading_bg_color}}"
            >
              {{ section.settings.heading }}
            </h2>
          {% endif %}

          {% if section.settings.subheading != blank %}
            <p
              class="xcl-text-center xcl-font-heading xcl-font-semibold xcl-text-[16px] xl:xcl-text-[28px] xcl-leading-normal"
              style="color: {{ section.settings.subheading_color }};"
            >
              {{ section.settings.subheading }}
            </p>
          {% endif %}

          {% if section.settings.bottom_subheading != blank %}
            <p
              class="xcl-font-heading xcl-text-center xcl-font-semibold xcl-text-[16px] xl:xcl-text-[28px] xcl-leading-normal xcl-pt-2 xl:xcl-pt-0"
              style="color: {{ section.settings.bottom_subheading_color }};"
            >
              {{ section.settings.bottom_subheading }}
            </p>
          {% endif %}
        </div>
      {% else %}
        {% if section.settings.section_title != blank %}
          {% render 'section-heading' %}
        {% endif %}
      {% endif %}

      <featured-slider-single
        class="featured-slider-root xcl-relative"
        data-autoplay="{{ section.settings.autoplay }}"
        data-slide-interval="{{ section.settings.slide_interval }}"
        data-show-arrows="{{ section.settings.show_arrows }}"
        data-show-dots="{{ section.settings.show_dots }}"
        data-show-play-pause="{{ section.settings.show_play_pause }}"
        data-enable-mobile-multi="{{ section.settings.enable_mobile_multi }}"
        data-mobile-slides-per-view="{{ section.settings.mobile_slides_per_view }}"
      >
        <div
          data-role="slider-wrapper"
          class="keen-slider  xcl-w-full xcl-overflow-hidden xcl-relative xcl-rounded-2xl xl:xcl-rounded-[32px]"
        >
          {% for block in section.blocks %}
            <div
              class="keen-slider__slide xcl-relative xcl-w-full fc-slide xcl-rounded-2xl xl:xcl-rounded-[32px]"
              style="border-color: {{ section.settings.card_border_color }}; background:{{ section.settings.card_bg_color }}"
            >

              {% if block.type == 'video' %}
                <div class="fc-item fc-video xcl-rounded-md xcl-overflow-hidden">
                  <div class="fc-media xcl-relative" style="padding-top:56.25%; background:#000;">

                    {%- comment -%}
                      Fancybox trigger overlay:
                      Click on poster / area -> popup open
                      Video plays in popup
                    {%- endcomment -%}
                    <a
                    class="fc-fancybox-link xcl-absolute xcl-inset-0 xcl-z-30"
                    href="{{ block.settings.video_url }}"
                    data-fancybox="{{ section.id }}-fc"
                    data-caption="{{ block.settings.title | escape }}"
                    data-type="html5video"
                    data-html5video-format="video/mp4"
                  ></a>

                    {% if block.settings.poster %}
                      <img
                        src="{{ block.settings.poster | img_url: 'master' }}"
                        class="xcl-absolute xcl-inset-0 xcl-w-full xcl-h-full xcl-object-cover video-poster"
                      >
                    {% endif %}

                    <video
                      preload="metadata"
                      data-video-src="{{ block.settings.video_url }}"
                      class="fc-video-element xcl-absolute xcl-inset-0 xcl-w-full xcl-h-full xcl-object-cover"
                      controlsList="nodownload"
                      playsinline
                    ></video>

                    <button
                      type="button"
                      class="fc-video-play xcl-absolute xcl-bg-transparent xcl-border-none  xcl-outline-none xcl-left-1/2 xcl-top-1/2 xcl-transform -xcl-translate-x-1/2 -xcl-translate-y-1/2 xcl-z-40 xcl-rounded-full xcl-w-12 xcl-h-12 xcl-flex xcl-items-center xcl-justify-center"
                    >
                      <svg width="37" height="47" viewBox="0 0 37 47" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0 46.6667V0L36.6667 23.3333L0 46.6667Z" fill="#D9D9D9"/>
                      </svg>
                    </button>
                  </div>
                </div>

              {% elsif block.type == 'image_text' %}
                <div
                  class="fc-item xcl-flex xcl-flex-col xcl-items-center xcl-rounded-2xl 
                    {% if section.settings.show_card_padding %}
                      xl:xcl-rounded-[32px] xcl-border xcl-border-solid xcl-border-[#403f3f] xcl-px-2 xcl-py-4 xl:xcl-px-14 xl:xcl-py-6
                    {% endif %}"
                  {% if section.settings.show_card_padding %}
                    style="background: {{ section.settings.card_bg }};"
                  {% endif %}
                >
                  {% if section.settings.show_card_heading and block.settings.title != blank %}
                    <h3 class="xcl-text-center xcl-font-heading xcl-font-semibold xcl-text-[14px] xl:xcl-text-[24px] xcl-mb-6 xcl-mt-4 xl:xcl-mt-0"
                    style="color:{{section.settings.section_text_color}}"
                    >
                      {{ block.settings.title }}
                    </h3>
                  {% endif %}

                  {%- comment -%}
                    IMAGE with Fancybox overlay (popup)
                    Existing layout stays same
                  {%- endcomment -%}
                  <div class="fc-lightbox-wrap xcl-relative xcl-w-full xcl-rounded-2xl xcl-overflow-hidden">
                    {% if block.settings.image %}
                      <img
                        src="{{ block.settings.image | img_url: 'master' }}"
                        alt="{{ block.settings.title }}"
                        class="xcl-w-full xcl-h-auto xcl-block xcl-rounded-2xl"
                      >
                      <a
                        class="fc-fancybox-link xcl-absolute xcl-inset-0 xcl-z-10"
                        href="{{ block.settings.image | img_url: 'master' }}"
                        data-fancybox="{{ section.id }}-fc"
                        data-caption="{{ block.settings.title | escape }}"
                      ></a>
                    {% endif %}
                  </div>

                  {% if section.settings.show_card_paragraph and block.settings.description != blank %}
                    <div class="xcl-text-center xcl-text-xs xl:xcl-text-[18px] xcl-leading-relaxed xcl-mt-4 xcl-max-w-[480px] xl:xcl-mt-6">
                      {{ block.settings.description }}
                    </div>
                  {% endif %}

                  {%- comment -%}
                    Button: sirf tab dikhe jab
                    1) button_label filled ho
                    2) button_url filled ho
                  {%- endcomment -%}
                  {% if block.settings.button_label != blank and block.settings.button_url != blank %}
                    <a
                      href="{{ block.settings.button_url }}"
                      class="xcl-inline-flex xcl-items-center xcl-justify-center xcl-mt-4 xcl-px-5 xcl-py-2 xcl-rounded-full xcl-text-[12px] xl:xcl-text-[14px] xcl-font-semibold xcl-bg-[#01C5E3] xcl-text-[#233052]"
                    >
                      {{ block.settings.button_label }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>

        {% if section.settings.show_arrows %}
          <button
            class="slider-arrow prev-arrow fc-arrow fc-arrow-left 
            xcl-hidden
            xcl-absolute
            xcl-top-1/2
            xcl--translate-y-1/2
            xcl-z-30
            xcl-bg-transparent
            xcl-border-none
            xcl-cursor-pointer
            xl:xcl-flex
            xcl-items-center
            xcl-justify-center
            xcl-w-[40px]
            xcl-h-[40px]
            xl:xcl-left-[-55px]
            "
            data-role="arrow-prev"
            aria-label="Previous slide"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
              <path d="M13.6667 20L23.6667 30L26 27.6667L18.3333 20L26 12.3333L23.6667 10L13.6667 20Z" fill="white"/>
            </svg>
          </button>

          <button
            class="slider-arrow next-arrow fc-arrow fc-arrow-right
             xcl-hidden
            xcl-absolute
            xcl-top-1/2
            xcl--translate-y-1/2
            xcl-bg-transparent
            xcl-border-none
            xcl-cursor-pointer
            xl:xcl-flex
            xcl-items-center
            xcl-justify-center
            xcl-w-[40px]
            xcl-h-[40px]
            xl:xcl-right-[-55px]
            xcl-z-[99999]
            
            "
            data-role="arrow-next"
            aria-label="Next slide"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
              <path d="M26.3333 20L16.3333 30L14 27.6667L21.6667 20L14 12.3333L16.3333 10L26.3333 20Z" fill="white"/>
            </svg>
          </button>
        {% endif %}

        <div class="slider-controls xcl-flex xcl-items-center xcl-justify-center xcl-mt-4 xcl-z-40 xcl-gap-4 xl:xcl-mt-8">
          <div class="slider-dots xcl-flex xcl-bg-[#303030] xcl-rounded-[24px] xcl-gap-4 xcl-min-w-[152px] xcl-h-10 xcl-justify-center xcl-items-center xcl-border-none xcl-outline-none"></div>

          <button class="slider-play-pause xcl-w-10 xcl-h-10 xcl-rounded-full xcl-bg-[#303030] xcl-border-none xcl-outline-none xcl-flex xcl-items-center xcl-justify-center xcl-text-black xcl-font-bold">
            <svg xmlns="http://www.w3.org/2000/svg" width="12" height="14" viewBox="0 0 12 14" fill="none">
              <path d="M10 14C8.89543 14 8 13.1046 8 12V2C8 0.89543 8.895431 0 10 0C11.1046 0 12 0.895431 12 2V12C12 13.1046 11.1046 14 10 14ZM2 14C0.895431 14 0 13.1046 0 12V2C0 0.89543 0.895431 0 2 0C3.10457 0 4 0.895431 4 2V12C4 13.1046 3.10457 14 2 14Z" fill="#D9D9D9"/>
            </svg>
          </button>
        </div>
      </featured-slider-single>
    </div>
  </div>

