<section class="mz-ty" style="
  --mz-bg1: {{ section.settings.bg_color_1 }};
  --mz-bg2: {{ section.settings.bg_color_2 }};
  --mz-card: {{ section.settings.card_bg }};
  --mz-text: {{ section.settings.text_color }};
  --mz-muted: {{ section.settings.muted_text_color }};
  --mz-accent: {{ section.settings.accent_color }};
  --mz-accent-2: {{ section.settings.accent_color_2 }};
  --mz-border: {{ section.settings.border_color }};
">
  <div class="mz-ty__wrap">
    <div class="mz-ty__card" role="status" aria-live="polite">
      <div class="mz-ty__icon" aria-hidden="true">
        <!-- Checkmark icon (SVG) -->
        <svg viewBox="0 0 24 24" class="mz-ty__svg" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2.4" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>

      {% if section.settings.kicker != blank %}
        <p class="mz-ty__kicker">{{ section.settings.kicker }}</p>
      {% endif %}

      <h1 class="mz-ty__title">{{ section.settings.heading }}</h1>
      <p class="mz-ty__subtitle">{{ section.settings.subheading }}</p>

      {% if section.settings.show_order_hint %}
        <div class="mz-ty__hint">
          {{ section.settings.order_hint_text }}
        </div>
      {% endif %}

      <div class="mz-ty__actions">
        {% if section.settings.primary_button_label != blank and section.settings.primary_button_link != blank %}
          <a class="mz-ty__btn mz-ty__btn--primary" href="{{ section.settings.primary_button_link }}">
            {{ section.settings.primary_button_label }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_label != blank and section.settings.secondary_button_link != blank %}
          <a class="mz-ty__btn mz-ty__btn--ghost" href="{{ section.settings.secondary_button_link }}">
            {{ section.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.show_support %}
        <div class="mz-ty__support">
          <h2 class="mz-ty__supportTitle">{{ section.settings.support_heading }}</h2>

          {% if section.settings.support_text != blank %}
            <p class="mz-ty__supportText">{{ section.settings.support_text }}</p>
          {% endif %}

          <div class="mz-ty__supportGrid">
            {% if section.settings.support_email != blank %}
              <a class="mz-ty__supportItem" href="mailto:{{ section.settings.support_email | escape }}">
                <span class="mz-ty__supportLabel">{{ section.settings.email_label }}</span>
                <span class="mz-ty__supportValue">{{ section.settings.support_email }}</span>
              </a>
            {% endif %}

            {% if section.settings.support_phone != blank %}
              <a class="mz-ty__supportItem" href="tel:{{ section.settings.support_phone | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}">
                <span class="mz-ty__supportLabel">{{ section.settings.phone_label }}</span>
                <span class="mz-ty__supportValue">{{ section.settings.support_phone }}</span>
              </a>
            {% endif %}

            {% if section.settings.support_whatsapp != blank %}
              {% assign wa_num = section.settings.support_whatsapp | remove: ' ' | remove: '-' | remove: '(' | remove: ')' | remove: '+' %}
              <a class="mz-ty__supportItem" target="_blank" rel="noopener" href="https://wa.me/{{ wa_num }}">
                <span class="mz-ty__supportLabel">{{ section.settings.whatsapp_label }}</span>
                <span class="mz-ty__supportValue">{{ section.settings.support_whatsapp }}</span>
              </a>
            {% endif %}
          </div>

          {% if section.settings.support_note != blank %}
            <p class="mz-ty__supportNote">{{ section.settings.support_note }}</p>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>

  <style>
    .mz-ty{
      padding: {{ section.settings.section_padding_y }}px 16px;
      background: radial-gradient(1000px 600px at 20% 10%, var(--mz-bg1) 0%, transparent 60%),
                  radial-gradient(900px 600px at 85% 30%, var(--mz-bg2) 0%, transparent 55%),
                  linear-gradient(180deg, #fff 0%, #fff 100%);
      color: var(--mz-text);
    }
    .mz-ty__wrap{
      max-width: {{ section.settings.max_width }}px;
      margin: 0 auto;
      display: flex;
      justify-content: center;
    }
    .mz-ty__card{
      width: 100%;
      max-width: 760px;
      background: var(--mz-card);
      border: 1px solid var(--mz-border);
      border-radius: {{ section.settings.radius }}px;
      padding: clamp(22px, 3vw, 40px);
      box-shadow: 0 14px 44px rgba(0,0,0,.08);
      text-align: center;
    }
    .mz-ty__icon{
      width: {{ section.settings.check_size }}px;
      height: {{ section.settings.check_size }}px;
      border-radius: 999px;
      margin: 0 auto 14px;
      display: grid;
      place-items: center;
      background: linear-gradient(135deg, var(--mz-accent), var(--mz-accent-2));
      color: #fff;
      box-shadow: 0 12px 28px rgba(0,0,0,.12);
    }
    .mz-ty__svg{ width: 56%; height: 56%; display:block; }
    .mz-ty__kicker{
      margin: 8px 0 8px;
      font-size: 12px;
      letter-spacing: .12em;
      text-transform: uppercase;
      color: var(--mz-muted);
    }
    .mz-ty__title{
      margin: 0 0 8px;
      font-size: clamp(22px, 3vw, 34px);
      line-height: 1.15;
      font-weight: 700;
    }
    .mz-ty__subtitle{
      margin: 0 auto 18px;
      max-width: 58ch;
      color: var(--mz-muted);
      line-height: 1.6;
      font-size: 15px;
    }
    .mz-ty__hint{
      margin: 0 auto 18px;
      max-width: 68ch;
      text-align: left;
      padding: 12px 14px;
      border-radius: 14px;
      border: 1px dashed var(--mz-border);
      color: var(--mz-muted);
      font-size: 14px;
      line-height: 1.6;
      background: rgba(255,255,255,.55);
    }
    .mz-ty__actions{
      display: flex;
      gap: 10px;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 8px;
      margin-bottom: 6px;
    }
    .mz-ty__btn{
      display: inline-flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      padding: 12px 18px;
      border-radius: 999px;
      font-size: 14px;
      font-weight: 600;
      transition: transform .15s ease, opacity .15s ease, background .15s ease;
      min-width: 170px;
    }
    .mz-ty__btn:hover{ transform: translateY(-1px); }
    .mz-ty__btn--primary{
      background: linear-gradient(135deg, var(--mz-accent), var(--mz-accent-2));
      color: #fff;
      border: 1px solid transparent;
    }
    .mz-ty__btn--ghost{
      background: transparent;
      color: var(--mz-text);
      border: 1px solid var(--mz-border);
    }

    .mz-ty__support{
      margin-top: 22px;
      padding-top: 18px;
      border-top: 1px solid var(--mz-border);
      text-align: left;
    }
    .mz-ty__supportTitle{
      margin: 0 0 6px;
      font-size: 16px;
      font-weight: 700;
    }
    .mz-ty__supportText{
      margin: 0 0 12px;
      color: var(--mz-muted);
      line-height: 1.6;
      font-size: 14px;
    }
    .mz-ty__supportGrid{
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 10px;
    }
    @media (max-width: 720px){
      .mz-ty__supportGrid{ grid-template-columns: 1fr; }
    }
    .mz-ty__supportItem{
      text-decoration: none;
      border: 1px solid var(--mz-border);
      border-radius: 16px;
      padding: 12px 12px;
      background: rgba(255,255,255,.65);
      transition: transform .15s ease, opacity .15s ease;
      color: inherit;
    }
    .mz-ty__supportItem:hover{ transform: translateY(-1px); }
    .mz-ty__supportLabel{
      display:block;
      font-size: 12px;
      color: var(--mz-muted);
      margin-bottom: 2px;
    }
    .mz-ty__supportValue{
      display:block;
      font-size: 14px;
      font-weight: 650;
      word-break: break-word;
    }
    .mz-ty__supportNote{
      margin: 10px 0 0;
      color: var(--mz-muted);
      font-size: 13px;
      line-height: 1.6;
    }
  </style>
</section>

{% schema %}
{
  "name": "MZ Thank You Page",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker (small text)", "default": "Order Confirmed" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Thanks for your purchase!" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Your order has been placed successfully. We’re getting it ready and will notify you once it ships." },

    { "type": "checkbox", "id": "show_order_hint", "label": "Show order hint box", "default": true },
    { "type": "richtext", "id": "order_hint_text", "label": "Order hint text", "default": "<p>Tip: You can track your order from your account page. If you checked out as a guest, please use the email you provided during checkout for updates.</p>" },

    { "type": "text", "id": "primary_button_label", "label": "Primary button label", "default": "Continue Shopping" },
    { "type": "url", "id": "primary_button_link", "label": "Primary button link" },

    { "type": "text", "id": "secondary_button_label", "label": "Secondary button label", "default": "View Orders" },
    { "type": "url", "id": "secondary_button_link", "label": "Secondary button link" },

    { "type": "header", "content": "Support" },
    { "type": "checkbox", "id": "show_support", "label": "Show support section", "default": true },
    { "type": "text", "id": "support_heading", "label": "Support heading", "default": "Need help?" },
    { "type": "textarea", "id": "support_text", "label": "Support text", "default": "Contact our support team and we’ll help you quickly." },

    { "type": "text", "id": "email_label", "label": "Email label", "default": "Email" },
    { "type": "text", "id": "support_email", "label": "Support email", "default": "support@yourstore.com" },

    { "type": "text", "id": "phone_label", "label": "Phone label", "default": "Call" },
    { "type": "text", "id": "support_phone", "label": "Support phone", "default": "+91 90000 00000" },

    { "type": "text", "id": "whatsapp_label", "label": "WhatsApp label", "default": "WhatsApp" },
    { "type": "text", "id": "support_whatsapp", "label": "WhatsApp number", "default": "+91 90000 00000" },

    { "type": "textarea", "id": "support_note", "label": "Support note", "default": "Support hours: Mon–Sat, 10am–7pm IST" },

    { "type": "header", "content": "Design" },
    { "type": "range", "id": "max_width", "label": "Max width (px)", "min": 720, "max": 1400, "step": 10, "default": 1100 },
    { "type": "range", "id": "section_padding_y", "label": "Section padding (top/bottom)", "min": 24, "max": 120, "step": 4, "default": 72 },
    { "type": "range", "id": "radius", "label": "Card radius", "min": 10, "max": 32, "step": 1, "default": 18 },
    { "type": "range", "id": "check_size", "label": "Checkmark circle size", "min": 54, "max": 110, "step": 2, "default": 78 },

    { "type": "color", "id": "bg_color_1", "label": "Background gradient 1", "default": "#F6EFEA" },
    { "type": "color", "id": "bg_color_2", "label": "Background gradient 2", "default": "#C58BAA" },
    { "type": "color", "id": "card_bg", "label": "Card background", "default": "#FFFFFF" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#1A1A1A" },
    { "type": "color", "id": "muted_text_color", "label": "Muted text color", "default": "#5A5A5A" },
    { "type": "color", "id": "border_color", "label": "Border color", "default": "#E9E3E6" },
    { "type": "color", "id": "accent_color", "label": "Accent color 1", "default": "#9B4A6A" },
    { "type": "color", "id": "accent_color_2", "label": "Accent color 2", "default": "#C58BAA" }
  ],
  "presets": [
    { "name": "Thank you" }
  ]
}
{% endschema %}