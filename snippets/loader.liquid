{% style %}
    .loader {
  width: 25px;
  padding: 4px;
  aspect-ratio: 1;
  border-radius: 50%;
  background: #fff;
  --_m: 
    conic-gradient(#0000 10%,#000),
    linear-gradient(#000 0 0) content-box;
  -webkit-mask: var(--_m);
          mask: var(--_m);
  -webkit-mask-composite: source-out;
          mask-composite: subtract;
  animation: l3 1s infinite linear;
}
@keyframes l3 {to{transform: rotate(1turn)}}

subscription-button .btn_loader{
  display: none;
}
subscription-button.loading .btn_loader{
  display: block;
}
subscription-button.loading .js-btn-text{
  display: none;
}

{% endstyle %}

<div class="loader {{ additional_class }}"></div>